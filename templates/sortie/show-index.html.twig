{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4 mb-4 row" style="max-width: 800px; justify-content: space-around">
        <div class="row col-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title">Détails de la sortie</h2>
                    <div class="row mt-2 mb-2">
                        <div class="row" style="border: 1px">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text bold">Nom de la sortie :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.tripName }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Date et heure de la sortie :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.tripStartDate|date("m/d/Y") }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Date limite d'inscription :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.deadlineRegistrationDate|date("m/d/Y") }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Nombre de places :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.capacity }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Durée (en minutes) :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.duration }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Description et infos</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.description }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Ville organisatrice :</p>
                            </div>
                            <div class="col-6">
                                <p></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Lieu :</p>
                            </div>
                            <div class="col-6">
                                <p>{{ sortie.place.placeName }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Rue :</p>
                            </div>
                            <div class="col-6">
                                <p></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Code postal :</p>
                            </div>
                            <div class="col-6">
                                <p></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Latitude</p>
                            </div>
                            <div class="col-6">
                                <p></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 font-weight-bold">
                                <p class="card-text">Longitude :</p>
                            </div>
                            <div class="col-6">
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container col-6" style="max-width: 500px">
            <div class="row mt-3">
                <div class="card text-center">
                    <h5 class="card-title mt-3 mb-0">Participants</h5>
                    <hr>
                    <div class="row text-center">
                        <div class="row col-6">
                            <p class="card-text font-weight-bold">Pseudo</p>
                            {% for participant in sortie.users %}
                                <p><a href="{{ path('user_show',{ 'id': participant.id }) }}">{{ participant.username }}</a></p>
                            {% endfor %}
                        </div>
                        <div class="row col-6">
                            <p class="card-text font-weight-bold">Nom</p>
                            {% for participant in sortie.users %}
                                <p>{{ participant.firstname }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
