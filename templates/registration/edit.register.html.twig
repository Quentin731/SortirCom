{% extends 'base.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block body %}


    <div class="container mt-4 mb-4" style="max-width: 500px">
        <div class="row">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Modifier mon profil</h5>
                    {{ form_start(editUserForm) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(editUserForm) }}
                        {{ form_row(editUserForm.username) }}
                    </div>
                    <div class="row" style="size: initial">
                        {{ form_row(editUserForm.imageFile) }}
                    </div>
                    {{ form_row(editUserForm.lastname) }}
                    {{ form_row(editUserForm.firstname) }}
                    {{ form_row(editUserForm.email) }}
                    {{ form_row(editUserForm.phoneNumber) }}
                    {{ form_row(editUserForm.city) }}
                    {{ form_row(editUserForm.plainPassword, {
                        label: 'Mot de Passe'
                    }) }}
                    {{ form_row(editUserForm.agreeTerms) }}

                    <button type="submit" class="btn btn-block btn-primary">Enregistrer</button>
                    {{ form_end(editUserForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
