<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <!-- Font Awesome -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
            rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet"
    />
    <!-- MDB -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
            rel="stylesheet"
    />
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarButtonsExample"
                    aria-controls="navbarButtonsExample"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarButtonsExample">
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Liste Sorties</a>
                    </li>
                    {% if app.user != null and 'ROLE_ADMIN' in app.user.getroles(TRUE) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('dashboard') }}">Administration</a>
                        </li>
                    {% endif %}
                    {% if app.user != null and 'ROLE_ORGA' in app.user.getroles(TRUE) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('create_sortie') }}">Créer une nouvelle sortie</a>
                        </li>
                    {% endif %}
                </ul>
                <!-- Left links -->

                <div class="d-flex align-items-center">
                    {% if app.user == null %}
                        <a href="{{ path('app_login') }}" class="btn btn-link px-3 me-2">
                            Connexion
                        </a>
                        <a href="{{ path('app_register') }}" class="btn btn-primary me-3">
                            Inscritpion
                        </a>
                    {% endif %}
                    {% if app.user %}
                        <a href="{{ path('user') }}" class="btn  btn-floating">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-link">
                            Déconexion
                        </a>
                    {% endif %}
                </div>
            </div>
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
    <title>{% block title %}{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
    <script src="{{ asset("js/app.js") }}"></script>
</head>
<body>
{% if (errorMessage is defined and errorMessage != "") %}
    <div class="alert alert-danger" role="alert">
        {{ errorMessage }}
    </div>
{% endif %}
{% block body %}{% endblock %}
</body>
<!-- MDB -->
<script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"
></script>
</html>
