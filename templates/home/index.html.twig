{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .tableau{
        overflow:auto
    }
</style>
<h1>Logo Sortir.com</h1>
<div class="row">
    <div class="card">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Inscris / Places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in listeSorties %}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateSortie }}</td>
                        <td>{{ sortie.isFinished }}</td>
                        <td>{{ sortie.getUsers().length }}/{{ sortie.nombrePlace }}</td>
                        <td></td>
                        <td>
                            {% if sortie.getParticipation(app.user) == 1 %}X{% endif %}
                        </td>
                        <td>{{ sortie.organisateur }}</td>
                        <td></td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}
